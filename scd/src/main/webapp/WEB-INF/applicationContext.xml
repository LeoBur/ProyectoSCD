<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true">

    <!-- Activates scanning of @Autowired -->
    <context:annotation-config/>

    <!-- Activates scanning of @Repository and @Service -->
    <context:component-scan base-package="com.bcpv"/>

    <!-- Add new DAOs here -->
    <bean id="medicionDao" class="war.webapp.dao.hibernate.MedicionDaoHibernate" />
    <bean id="tipoDiabetesDao" class="war.webapp.dao.hibernate.TipoDiabetesDaoHibernate"/>
    <bean id="alimentoDao" class="war.webapp.dao.hibernate.AlimentoDaoHibernate"/>
    
    <bean id="personaDao" class="war.webapp.dao.hibernate.PersonaDaoHibernate"/>
    <bean id="endocrinologoDao" class="war.webapp.dao.hibernate.EndocrinologoDaoHibernate"/>
    <bean id="especialistaDao" class="war.webapp.dao.hibernate.EspecialistaDaoHibernate"/>

    <!-- Add new Managers here -->
    <bean id="medicionManager" class="war.webapp.service.impl.MedicionManagerImpl">
    	<property name="medicionDao" ref="medicionDao"/>
    </bean>
    <bean id="tipoDiabetesManager" class="war.webapp.service.impl.TipoDiabetesManagerImpl">
    	<property name="tipoDiabetesDao" ref="tipoDiabetesDao"/>
    </bean>
    <bean id="alimentoManager" class="war.webapp.service.impl.AlimentoManagerImpl">
        <property name="alimentoDao" ref = "alimentoDao"/>
    </bean>
    
    <bean id="personaManager" class="war.webapp.service.impl.PersonaManagerImpl">
   		<property name="personaDao" ref="personaDao"/>
    </bean>
    <bean id="especialistaManager" class="war.webapp.service.impl.EspecialistaManagerImpl">
    	<property name="especialistaDao" ref="especialistaDao"/>
    </bean>
    <bean id="endocrinologoManager" class="war.webapp.service.impl.EndocrinologoManagerImpl">
    	<property name="endocrinologoDao" ref="endocrinologoDao"/>
    </bean>
    
    <!-- Configure and Alternative PasswordTokenManager -->
	<!-- <bean id="passwordTokenManager" class="org.appfuse.service.impl.PersistentPasswordTokenManagerImpl" autowire="default" /> -->
</beans>